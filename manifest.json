{
	"manifest_version": 2,
	"name": "Browser Bot",
	"description": "A generic extension that does anything you want",
	"version": "0.1",
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"vendor/jSpaghetti.min.js",

				"Bot.js",

				"extension/Message.js",
				"extension/BackgroundStorage.js",
				"extension/Extension.js",

				"tasks/foo/procedures.js",
				"tasks/foo/instructions/remove.js",

				"main.js"
			]
		}
	],
	"background": {
		"scripts": [
			"extension/Message.js",
			"extension/background/background.js"
		],
		"persistent": true
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "extension/ui/popup.html",
		"default_title": "Extension popup",
		"scripts": [
			"extension/Message.js"
		]
	}
}
